{{#each playlists}}
  <div class="box box-link-hover-shadow">
    <h2 class="title">
      {{title}}
    </h2>
    <div class="is-flex">
      <a href="/playlist/{{_id}}" class="button mr-2">
        <span class="icon is-small">
          <i class="fas fa-folder-open"></i>
        </span>
      </a>
      <form action="/dashboard/deleteplaylist/{{_id}}" method="POST">
        <button type="submit" class="button">
          <span class="icon is-small">
            <i class="fas fa-trash"></i>
          </span>
        </button>
      </form>
    </div>
  </div>
{{/each}}